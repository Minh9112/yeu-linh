<!DOCTYPE html>
<html lang="vi">
<head>
  <meta charset="UTF-8" />
  <title>Trái Tim Linh ❤️</title>
  <style>
    body {
      margin: 0;
      background-color: #111;
      overflow: hidden;
      font-family: Arial, sans-serif;
    }

    canvas {
      position: absolute;
      z-index: 1;
    }

    #heartText {
      position: absolute;
      z-index: 2;
      color: white;
      font-size: 48px;
      font-weight: bold;
      top: 28%; /* Giữa tim */
      left: 50%;
      transform: translate(-50%, -50%);
      animation: glow 2s infinite ease-in-out;
    }

    @keyframes glow {
      0% {
        text-shadow: 0 0 5px #fff, 0 0 10px #ff4da6, 0 0 15px #ff4da6, 0 0 20px #ff4da6;
      }
      50% {
        text-shadow: 0 0 10px #fff, 0 0 20px #ff1ac6, 0 0 30px #ff1ac6, 0 0 40px #ff1ac6;
      }
      100% {
        text-shadow: 0 0 5px #fff, 0 0 10px #ff4da6, 0 0 15px #ff4da6, 0 0 20px #ff4da6;
      }
    }

    .floating-heart {
      position: absolute;
      color: red;
      animation: float 4s linear infinite;
      font-size: 20px;
    }

    @keyframes float {
      0% {
        opacity: 1;
        transform: translateY(0) scale(1);
      }
      100% {
        opacity: 0;
        transform: translateY(-200px) scale(1.5);
      }
    }

    .snowflake {
      position: fixed;
      top: -10px;
      color: #fff;
      font-size: 1em;
      animation-name: fall;
      animation-timing-function: linear;
      animation-iteration-count: infinite;
      z-index: 3;
    }

    @keyframes fall {
      0% { transform: translateY(0); opacity: 1; }
      100% { transform: translateY(100vh); opacity: 0; }
    }
  </style>
</head>
<body>
  <canvas id="heartCanvas" width="600" height="600"></canvas>
  <div id="heartText">Linh</div>

  <!-- Nhạc tự động phát -->
  <audio id="bgMusic" autoplay loop>
    <source src="https://minhgpt.github.io/files/yeu-linh.mp3" type="audio/mpeg">
    Trình duyệt của bạn không hỗ trợ phát nhạc.
  </audio>

  <script>
    // Vẽ trái tim
    const canvas = document.getElementById("heartCanvas");
    const ctx = canvas.getContext("2d");
    ctx.translate(300, 300);
    ctx.beginPath();
    for (let t = 0; t <= Math.PI * 2; t += 0.01) {
      let x = 16 * Math.pow(Math.sin(t), 3);
      let y = 13 * Math.cos(t) - 5 * Math.cos(2 * t)
              - 2 * Math.cos(3 * t) - Math.cos(4 * t);
      ctx.lineTo(x * 15, -y * 15);
    }
    ctx.closePath();
    ctx.fillStyle = "red";
    ctx.fill();

    // Tim bay
    function createFloatingHeart() {
      const heart = document.createElement("div");
      heart.className = "floating-heart";
      heart.innerText = "❤️";
      heart.style.left = Math.random() * 100 + "vw";
      heart.style.bottom = "0px";
      heart.style.fontSize = Math.random() * 20 + 15 + "px";
      heart.style.animationDuration = (Math.random() * 2 + 3) + "s";
      document.body.appendChild(heart);
      setTimeout(() => heart.remove(), 4000);
    }
    setInterval(createFloatingHeart, 300);

    // Tuyết rơi
    function createSnowflake() {
      const snowflake = document.createElement("div");
      snowflake.className = "snowflake";
      snowflake.innerHTML = "❄️";
      snowflake.style.left = Math.random() * window.innerWidth + "px";
      snowflake.style.animationDuration = (Math.random() * 5 + 5) + "s";
      snowflake.style.fontSize = Math.random() * 10 + 10 + "px";
      document.body.appendChild(snowflake);
      setTimeout(() => snowflake.remove(), 10000);
    }
    setInterval(createSnowflake, 200);
  </script>
</body>
</html>
